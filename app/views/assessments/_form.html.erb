<%= form_with(model: assessment) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.select :status, options_for_select(Assessment.statuses.map {|key, value| [key.titleize, Assessment.statuses.key(value)]}), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :comprehension %>
    <%= form.select :comprehension, options_for_select(Assessment.comprehensions.map {|key, value| [key.titleize, Assessment.comprehensions.key(value)]}), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :reviewer %>
    <%= form.text_field :reviewer, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), assessments_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), assessment_path(@assessment), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
